{% extends 'base.html.twig' %}

{% block  body %}
    <div class="container-fluid blue-color-1">
        <div class="row">
            <div class="col-12">
                <hr class="hr-text" data-content="Actions">
                <div class="card border">
                    <div class="card-body">
                        <h5 class="card-title"></h5>
                        <button type="button" id="activate-scanner" data-toggle="modal" data-target="#qrcodeModal" href="#" class="btn btn-secondary button-lg align-center-transfer margin-bottom">Show my QR Code</button>
                        <p class="card-subtitle text-muted last-update-text"></p>
                        <p class="card-text text-muted"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="transfer-colors"></div>

    <div class="container-fluid blue-color-2">
        <div class="row">
            <div class="col-12">
                <div class="url-detail" data-url-detail="{{ path('app_customer_detail', {'slug': 0}) }}">
                </div>

                <hr class="hr-text" data-content="Receiving">
                <div class="todo">
                    <div class="card border no-data-card">
                        <div class="card-body">
                            <h5 class="card-title">No parcels expected.</h5>
                            <p class="card-subtitle text-muted last-update-text">(for now)</p>
                        </div>
                    </div>
                </div>

                <hr class="hr-text" data-content="Delivered">
                <div class="done">
                    <div class="card border no-data-card">
                        <div class="card-body">
                            <h5 class="card-title">No parcels delivered.</h5>
                            <p class="card-subtitle text-muted last-update-text">(for now)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="qrcodeModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">QR Code</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" id="transfer-close" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}